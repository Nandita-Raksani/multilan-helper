{
  "name": "figma-plugin",
  "version": "1.0.0",
  "description": "A Figma plugin for managing multilingual translations",
  "scripts": {
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "esbuild src/plugin/index.ts --bundle --outfile=dist/code.js --target=es2017",
    "build:ui": "node scripts/build-ui.js",
    "build:watch": "npm run build:plugin:watch & npm run build:ui:watch",
    "build:plugin:watch": "esbuild src/plugin/index.ts --bundle --outfile=dist/code.js --target=es2017 --watch",
    "build:ui:watch": "node scripts/build-ui.js --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.121.0",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^2.0.0",
    "chokidar": "^3.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "jsdom": "^24.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^2.0.0"
  }
}
